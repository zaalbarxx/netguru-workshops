-provide(:title, "Products List")
%h1 Listing products
=link_to 'Back to category', category_path(category), :class => 'btn btn-default'
%table.table
  %tr
    %th Title
    %th Description
    %th Price
    %th
    %th
    %th

  - products.each do |product|
    %tr
      %td= product.title
      %td= product.description
      %td= product.price
      %td
        =link_to('Show', category_product_path(product.category, product), {class: 'btn btn-primary'})
      %td
        -if user_signed_in? and product.belongs_to_user?(current_user)
          =link_to('Edit', edit_category_product_path(product.category, product), {class: 'btn btn-default'})
      %td
        -if user_signed_in? and product.belongs_to_user?(current_user)
          =link_to('Destroy', category_product_path(product.category, product), method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger")

%br
